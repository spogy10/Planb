<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jr.poliv.planb.ChangePassword"
    android:orientation="vertical"
    android:gravity="center">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/old_password_hint"
            android:inputType="textPassword"
            android:id="@+id/old_password"
            android:layout_marginTop="46dp"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/old_password_checkBox"
            android:layout_alignTop="@+id/old_password"
            android:layout_toEndOf="@+id/old_password" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/new_password_hint"
            android:inputType="textPassword"
            android:id="@+id/new_password"
            android:layout_marginTop="46dp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/new_password_checkBox"
            android:layout_alignTop="@+id/new_password"
            android:layout_toEndOf="@+id/new_password" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/new_password2_hint"
            android:inputType="textPassword"
            android:id="@+id/new_password2"
            android:layout_marginTop="46dp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/new_password2_checkBox"
            android:layout_alignTop="@+id/new_password2"
            android:layout_toEndOf="@+id/new_password2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save New Password"
            android:id="@+id/save_new_password_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@android:style/Widget.Holo.CompoundButton.Star" />


    </RelativeLayout>








</LinearLayout>
